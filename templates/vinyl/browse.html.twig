{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="flex flex-row items-center ml-20 mt-10 space-x-3">
        <a href="{{ path('app_homepage') }}"
                class="py-2.5 px-5 text-sm font-medium focus:outline-none rounded-full border border-gray-200 focus:z-10 focus:ring-4 focus:ring-gray-700 bg-gray-800 text-gray-400 hover:text-white hover:bg-gray-700 flex items-center">
            <i class="fa-solid fa-arrow-rotate-left fa-spin fa-spin-reverse" style="color: #ffffff;"></i>
            &nbsp;
            Back
        </a>
        <h1 class="text-4xl font-bold">{{ title }}</h1>
    </div>

    <div class="flex flex-col justify-center grid grid-cols-3 gap-4 mt-20">
        {% for song in songs %}
            <div class="w-full px-4">
                <div class="bg-white shadow-md p-4 rounded-lg mb-4">
                    <h2 class="text-xl font-semibold">{{ song.song }}</h2>
                    <p class="text-gray-600">Artist: <strong>{{ song.artist }}</strong></p>
                    <p class="text-gray-500 text-sm">Genre: {{ song.genre }}</p>
                    <p class="text-gray-500 text-sm">Rating: {{ song.rating }}/100</p>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}